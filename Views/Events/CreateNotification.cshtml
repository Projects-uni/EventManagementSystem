@{
    ViewData["Title"] = "Bildirim Oluştur";
    var eventId = (Guid)ViewBag.EventId;
    var eventName = ViewBag.EventName as string ?? "";
}

<style>
    .page-wrap {
        min-height: 100vh;
        padding: 30px 20px;
    }

    .card {
        max-width: 720px;
        margin: 0 auto;
        background: white;
        border-radius: 14px;
        padding: 24px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }

    .card h2 {
        margin: 0 0 6px 0;
        font-size: 28px;
    }

    .muted {
        color: #666;
        margin-bottom: 18px;
    }

    .field {
        margin-bottom: 14px;
    }

    .field label {
        font-weight: 600;
        display: block;
        margin-bottom: 6px;
    }

    .input, .textarea {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 12px 12px;
        font-size: 15px;
        outline: none;
    }

    .textarea { min-height: 140px; resize: vertical; }

    .error-box {
        background: #ffecec;
        border: 1px solid #ffb5b5;
        color: #b30000;
        padding: 10px 12px;
        border-radius: 10px;
        margin-bottom: 14px;
    }

    .actions {
        display: flex;
        gap: 10px;
        margin-top: 18px;
    }

    .btn {
        border: none;
        border-radius: 10px;
        padding: 10px 14px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }

    .btn-primary { background: #4f46e5; color: white; }
    .btn-secondary { background: #e5e7eb; color: #111827; }
</style>

<div class="page-wrap">
    <div class="card">
        <h2>Bildirim Oluştur</h2>
        <div class="muted">
            @if (!string.IsNullOrWhiteSpace(eventName))
            {
                <span>Etkinlik: <strong>@eventName</strong></span>
            }
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error-box">@ViewBag.Error</div>
        }

        <form method="post" asp-action="CreateNotification" asp-controller="Events">
            <input type="hidden" name="eventId" value="@eventId" />

            <div class="field">
                <label>Başlık</label>
                <input class="input" type="text" name="title" maxlength="120" required />
            </div>

            <div class="field">
                <label>Mesaj</label>
                <textarea class="textarea" name="message" maxlength="2000" rows="6" required></textarea>
            </div>

            <div class="actions">
                <button class="btn btn-primary" type="submit">Yayınla</button>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@eventId">İptal</a>
            </div>
        </form>
    </div>
</div>
